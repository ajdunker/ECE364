#! /bin/bash
#
# $Author$
# $Date$
# $HeadURL$
# $Revision$

if [[ $# > 1 ]]
then
    echo "Error, only 1 command argument is accepted."
    exit 1
elif [[ $# == 0 ]]
then
    echo "Usage: line_num.bash <filename>"
    exit 0
elif [[ ! -r $1 ]]
then
    echo "Cannot read $1"
    exit 1
fi

X=1

exec 4<$1

while read line <&4
do
    echo $X:$line
    ((X=$X+1))
done

exit 0